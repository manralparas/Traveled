<%-include('../partials/header')-%>
<div class="container">
<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>
            <li class="list-group-item">Info 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="thumbnail">
           <img class="img-fluid" src="<%=campground.image%>">
           <div class="caption">
               <h4 class="float-right">300 Rs.</h4>
               <h4><a href=""><%= campground.name%></a></h4>
               <p ><%= campground.description%> </p>
               <p>
                    <em>Posted By   <%= campground.author.username %> </em>
                </p>
                <% if(currentUser&&campground.author.id.equals(currentUser._id)) { %> 
                    <a class="btn btn-warning" href="/campground/<%= campground._id %>/edit" >Edit</a>
                    <form id="delete-form" action="/campground/<%=campground._id%>/?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %> 
           </div>
        </div>
        <div class="card card-body bg-light">
            <div class="text-right">
                <a class="btn btn-success" href="/campground/<%= campground._id%>/comments/new">Add New Comment</a>
            </div>
                        <hr>
                   <% campground.comments.forEach((comment)=>{ %>
                    <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author.username %></strong> 
                            <span class="float-right">10 days ago</span>
                            <p><%= comment.content%></p>
                <% if(currentUser&&comment.author.id.equals(currentUser._id)) { %> 
                            <a class="btn btn-xs btn-warning" href="/campground/<%= campground._id %>/comments/<%=comment._id%>/edit">Edit</a>
                            <form  id="delete-form"action="/campground/<%= campground._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-xs">Delete</button>
                            </form>
                        <% } %> 
                        </div>
                    </div>
                     <hr>
                   <% }) %>
        </div>
    </div>
</div>

</div>
<div class="text-center">
</div>
<p>
</p>




<%- include('../partials/footer')  -%>

