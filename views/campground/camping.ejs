<%- include ("../partials/header") -%>


<div class="container">
<header class="jumbotron">
   <div class="container">
    <h1>Welcome to CampGround</h1>
    <p>View Our hand picked Campground from all over the world</p>

    <p>
        <a class="btn btn-primary btn-large" href="/campground/new">Add new campground</a>
    </p>
</div>
</header>

<div class="row" >

    <% campground.forEach(element => { %>
       
        <div class="col-md-3 col-sm-6">
          
        
                <img class="img-thumbnail" src="<%= element.image %>" >
                <div class="caption text-center">
                <p><%= element.name %> </p>
                </div>
                <p>
                    <a href="/campground/<%= element._id %>" class="btn btn-primary">More info</a>
                </p>
             </div>
        
            <%});%>
        
        
    </div>

</div>



</div>
 <%- include("../partials/footer")-%>